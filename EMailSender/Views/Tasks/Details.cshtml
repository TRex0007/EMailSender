@model EMailSender.Models.Task

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Mail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt>
            @Html.Label("Group of Recipients")
        </dt>
        @foreach (var group in Model.SelectedGroupsOfUsers)
        {
            <dd>
                @Html.DisplayFor(model => group.Name)
            </dd>
        }
        </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TaskId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
